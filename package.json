{
  "name": "reviewflow",
  "private": true,
  "version": "5.0.1",
  "description": "ðŸš¦ Open Source GitHub bot that improves PR flow from opening to merging.",
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (https://christophe.hurpeau.com)",
  "license": "ISC",
  "repository": "https://github.com/christophehurpeau/reviewflow.git",
  "homepage": "https://github.com/christophehurpeau/reviewflow",
  "type": "module",
  "packageManager": "yarn@4.11.0",
  "engines": {
    "node": ">=22.18.0"
  },
  "main": "./build/index-node.mjs",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./src/index.ts",
      "node": {
        "import": "./build/index-node.mjs"
      }
    }
  },
  "scripts": {
    "build": "yarn clean:build && rollup --config rollup.config.mjs",
    "checks": "node scripts/check-package.js",
    "clean": "yarn clean:build",
    "clean:build": "pob-esbuild-clean-out build",
    "generate:test-coverage": "rm -Rf docs/coverage/ ; NODE_ENV=production vitest --coverage",
    "lint": "yarn run lint:prettier && tsc && yarn run lint:eslint",
    "lint:eslint": "eslint --quiet .",
    "lint:prettier": "pob-root-prettier --check .",
    "lint:prettier:fix": "pob-root-prettier --write .",
    "postinstall": "pob-root-postinstall",
    "start": "yarn clean:build && rollup --config rollup.config.mjs --watch",
    "test": "TZ=UTC vitest",
    "test:coverage": "TZ=UTC POB_VITEST_COVERAGE=json,text vitest run --coverage",
    "test:coverage:json": "TZ=UTC POB_VITEST_COVERAGE=json vitest run --coverage",
    "test:watch": "TZ=UTC vitest --watch"
  },
  "commitlint": {
    "extends": [
      "@pob/root/commitlint-config"
    ]
  },
  "pob": {
    "bundler": "rollup-esbuild",
    "entries": [
      "index"
    ],
    "envs": [
      {
        "target": "node",
        "version": "22",
        "omitVersionInFileName": true
      }
    ],
    "jsx": true,
    "typescript": true
  },
  "prettier": "@pob/root/prettier-config",
  "dependencies": {
    "@commitlint/config-conventional": "20.0.0",
    "@commitlint/lint": "20.0.0",
    "@commitlint/parse": "20.0.0",
    "@octokit/core": "7.0.6",
    "@octokit/plugin-rest-endpoint-methods": "16.0.0",
    "@octokit/rest": "22.0.0",
    "@octokit/webhooks": "14.1.3",
    "@sentry/node": "10.22.0",
    "@slack/web-api": "7.12.0",
    "@tryfabric/mack": "1.2.1",
    "body-parser": "2.2.0",
    "conventional-changelog-conventionalcommits": "9.1.0",
    "cookie-parser": "1.4.7",
    "dotenv": "17.2.3",
    "emoji-regex": "10.6.0",
    "express": "5.1.0",
    "issue-parser": "7.0.1",
    "jsonwebtoken": "9.0.2",
    "liwi-mongo": "12.0.0",
    "lock": "1.1.0",
    "probot": "14.2.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "simple-oauth2": "5.1.0",
    "slackify-markdown": "5.0.0"
  },
  "devDependencies": {
    "@pob/eslint-config": "62.0.0",
    "@pob/eslint-config-typescript": "62.0.0",
    "@pob/eslint-config-typescript-react": "62.0.0",
    "@pob/rollup-esbuild": "7.3.2",
    "@pob/root": "19.7.1",
    "@types/body-parser": "1.19.6",
    "@types/cookie-parser": "1.4.10",
    "@types/express": "5.0.5",
    "@types/issue-parser": "3.0.5",
    "@types/jsonwebtoken": "9.0.10",
    "@types/node": "22.19.1",
    "@types/react": "18.3.27",
    "@types/react-dom": "18.3.7",
    "@types/simple-oauth2": "5.0.7",
    "@vitest/coverage-v8": "4.0.9",
    "check-package-dependencies": "10.5.0",
    "eslint": "9.39.1",
    "nock": "14.0.10",
    "smee-client": "4.4.1",
    "type-fest": "5.2.0",
    "typescript": "5.9.3",
    "vitest": "4.0.9"
  }
}
