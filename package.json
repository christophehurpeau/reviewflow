{
  "name": "reviewflow",
  "private": true,
  "version": "0.0.0",
  "description": "reviewflow",
  "keywords": [],
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (https://christophe.hurpeau.com)",
  "license": "ISC",
  "repository": "git@github.com:christophehurpeau/reviewflow.git",
  "homepage": "https://github.com/christophehurpeau/reviewflow",
  "engines": {
    "node": ">=8.3.0"
  },
  "main": "./index.js",
  "scripts": {
    "clean": "rm -Rf docs dist",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "dev": "nodemon --exec \"yarn start --port 3010 --private-key=private_key/key.pem\"",
    "lint": "eslint index.js",
    "postcheckout": "yarnhook",
    "postmerge": "yarnhook",
    "postrewrite": "yarnhook",
    "precommit": "lint-staged",
    "preversion": "yarn run lint && pob-repository-check-clean",
    "release": "pob-repository-check-clean && pob-release",
    "start": "probot run ./index.js",
    "start:tunnel": "lt --subdomain reviewflow --port 3010",
    "version": "pob-version"
  },
  "lint-staged": {
    "{package.json,.eslintrc.json}": [
      "prettier --write",
      "git add"
    ],
    "lib/**/*.json": [
      "prettier --write",
      "git add"
    ],
    "lib/**/*.js": [
      "eslint --fix --quiet",
      "git add"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "@slack/client": "^4.3.1",
    "probot": "^6.2.1",
    "probot-config": "probot/probot-config#def82e6b324439f08c1c630c4f3cb57bab689979"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "concurrently": "^3.6.0",
    "eslint": "^5.1.0",
    "eslint-config-pob": "^21.1.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-unicorn": "^4.0.3",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "localtunnel": "^1.9.0",
    "nodemon": "^1.17.5",
    "pob-release": "^4.2.1",
    "prettier": "^1.13.7",
    "yarnhook": "^0.2.0"
  }
}
