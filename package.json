{
  "name": "reviewflow",
  "private": true,
  "version": "1.8.1",
  "description": "reviewflow",
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (https://christophe.hurpeau.com)",
  "license": "ISC",
  "repository": "https://github.com:christophehurpeau/reviewflow.git",
  "homepage": "https://github.com/christophehurpeau/reviewflow",
  "engines": {
    "node": ">=10.15.0"
  },
  "main": "./index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "pob-build",
    "build:definitions": "tsc -p tsconfig.build.json",
    "clean": "rm -Rf dist",
    "dev": "PORT=3010 nodemon --exec \"node dist/index-node10-dev.cjs.js\"",
    "lint": "tsc && eslint --ext .ts src/",
    "postbuild": "tsc -p tsconfig.build.json",
    "preversion": "yarn run lint && yarn run build && repository-check-dirty",
    "release": "repository-check-dirty && pob-release",
    "start": "node dist/index-node10.cjs.js",
    "version": "pob-version",
    "watch": "pob-watch"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "post-checkout": "yarnhook",
      "post-merge": "yarnhook",
      "post-rewrite": "yarnhook",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "yarn.lock": ["yarn-update-lock", "git add"],
    "{package.json,.eslintrc.json}": [
      "prettier --parser json --write",
      "git add"
    ],
    "src/**/*.json": ["prettier --parser json --write", "git add"],
    "src/**/*.{js,ts}": ["eslint --fix --quiet", "git add"]
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "dependencies": {
    "@slack/web-api": "5.0.0",
    "dotenv": "^7.0.0",
    "lock": "^1.1.0",
    "probot": "9.2.0",
    "probot-config": "^1.0.1"
  },
  "devDependencies": {
    "@babel/core": "7.4.0",
    "@commitlint/cli": "7.5.2",
    "@commitlint/config-conventional": "7.5.0",
    "@pob/eslint-config-babel": "29.1.0",
    "@pob/eslint-config-babel-node": "29.1.0",
    "@pob/eslint-config-typescript": "29.1.0",
    "@types/jest": "24.0.11",
    "babel-preset-latest-node": "3.1.1",
    "eslint": "5.16.0",
    "husky": "1.3.1",
    "lint-staged": "8.1.5",
    "nodemon": "1.18.10",
    "pob-babel": "23.8.0",
    "pob-release": "4.9.1",
    "prettier": "1.16.4",
    "repository-check-dirty": "1.0.2",
    "smee-client": "1.1.0",
    "typescript": "3.4.1",
    "yarn-update-lock": "0.3.4",
    "yarnhook": "0.4.0"
  }
}
