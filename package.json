{
  "name": "reviewflow",
  "private": true,
  "version": "1.22.0",
  "description": "reviewflow",
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (https://christophe.hurpeau.com)",
  "license": "ISC",
  "repository": "https://github.com:christophehurpeau/reviewflow.git",
  "homepage": "https://github.com/christophehurpeau/reviewflow",
  "engines": {
    "node": ">=10.0.0"
  },
  "main": "./index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "pob-build",
    "build:definitions": "tsc -p tsconfig.build.json",
    "clean": "rm -Rf dist",
    "dev": "PORT=3010 nodemon --exec \"node dist/index-node10-dev.cjs.js\"",
    "generate:test-coverage": "rm -Rf docs/coverage/ ; NODE_ENV=production BABEL_ENV=test jest --coverage --coverageReporters=pob-lcov-reporter --coverageDirectory=docs/coverage/",
    "lint": "tsc && eslint --ext .ts --quiet src/",
    "preversion": "yarn run lint && yarn run build && repository-check-dirty",
    "release": "repository-check-dirty && pob-release",
    "start": "node dist/index-node10.cjs.js",
    "test": "jest",
    "test:watch": "jest",
    "version": "pob-version",
    "watch": "pob-watch"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "post-checkout": "yarnhook",
      "post-merge": "yarnhook",
      "post-rewrite": "yarnhook",
      "pre-commit": "lint-staged && yarn test"
    }
  },
  "lint-staged": {
    "yarn.lock": ["yarn-update-lock", "git add"],
    "{package.json,.eslintrc.json}": [
      "prettier --parser json --write",
      "git add"
    ],
    "src/**/*.json": ["prettier --parser json --write", "git add"],
    "src/**/*.{js,ts}": ["eslint --fix --quiet", "git add"]
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "jest": {
    "cacheDirectory": "./node_modules/.cache/jest",
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.ts",
      "<rootDir>/src/**/*.test.ts"
    ],
    "collectCoverageFrom": ["src/**/*.ts"],
    "moduleFileExtensions": ["ts", "js"],
    "transform": {
      "^.+\\.ts$": "babel-jest"
    }
  },
  "dependencies": {
    "@slack/web-api": "5.1.0",
    "body-parser": "^1.18.3",
    "cookie-parser": "^1.4.4",
    "dotenv": "^8.0.0",
    "jsonwebtoken": "^8.5.0",
    "liwi": "^1.1.0",
    "liwi-mongo": "^4.1.0",
    "lock": "^1.1.0",
    "probot": "9.2.11",
    "probot-config": "^1.0.1",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "simple-oauth2": "^2.2.1"
  },
  "devDependencies": {
    "@babel/core": "7.4.4",
    "@babel/preset-react": "^7.0.0",
    "@commitlint/cli": "7.5.2",
    "@commitlint/config-conventional": "7.5.0",
    "@pob/eslint-config-babel": "31.0.0",
    "@pob/eslint-config-babel-node": "31.0.0",
    "@pob/eslint-config-typescript": "31.1.0",
    "@pob/eslint-config-typescript-react": "31.0.0",
    "@types/cookie-parser": "^1.4.1",
    "@types/express": "^4.16.1",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/node": ">=10.0.0",
    "@types/react": "^16.8.7",
    "@types/react-dom": "^16.8.2",
    "@types/simple-oauth2": "^2.2.1",
    "babel-jest": "24.7.1",
    "babel-preset-latest-node": "3.1.1",
    "eslint": "5.16.0",
    "husky": "2.2.0",
    "jest": "24.7.1",
    "jest-junit-reporter": "1.1.0",
    "lint-staged": "8.1.6",
    "nodemon": "1.19.0",
    "pob-babel": "23.16.0",
    "pob-lcov-reporter": "1.2.0",
    "pob-release": "4.13.1",
    "prettier": "1.17.0",
    "repository-check-dirty": "1.0.2",
    "smee-client": "1.1.0",
    "typescript": "3.5.3",
    "yarn-update-lock": "1.0.0",
    "yarnhook": "0.4.1"
  }
}
