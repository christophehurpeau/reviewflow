{
  "cacheDirectory": "./node_modules/.cache/jest",
  "testMatch": [
    "<rootDir>/src/**/__tests__/**/*.ts?(x)",
    "<rootDir>/src/**/*.test.ts?(x)"
  ],
  "collectCoverageFrom": ["src/**/*.ts?(x)"],
  "moduleFileExtensions": ["ts", "tsx", "js", "json"],
  "extensionsToTreatAsEsm": [".ts", ".tsx"],
  "transform": {
    "^.+\\.tsx?$": ["@swc/jest"]
  }
}
